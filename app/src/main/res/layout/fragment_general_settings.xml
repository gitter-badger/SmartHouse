<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_import_export"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/general_settings_import_export"
            android:textSize="30sp" />

        <Button
            android:id="@+id/gs_activity_preferences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/general_settings_prefs"
            android:textSize="30sp" />

        <Button
            android:id="@+id/gs_quit_application"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/general_settings_close_app"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/ImageButton02"
            android:layout_width="128px"
            android:layout_height="128px"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/mms_return_button"
            android:layout_width="128px"
            android:layout_height="128px"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/button_up" />

        <ImageButton
            android:id="@+id/mms_right_button"
            android:layout_width="128px"
            android:layout_height="128px"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>