<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/psv_tv_headertext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="40sp"
                android:text="@string/activity_page_send_dummy_header_text" />

            <TextView
                android:id="@+id/psv_tv_description_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25sp"
                android:text="@string/activity_page_send_dummy_description_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/psv_image"
                android:layout_width="320px"
                android:layout_height="320px"
                android:layout_gravity="left|center_vertical"
                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/psv_tv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/activity_page_send_current_value"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/psv_incoming_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text=""
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/psv_tv02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/activity_page_send_new_value"
                        android:textSize="40sp" />

                    <EditText
                        android:id="@+id/psv_outgoing_value"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="bottom|center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:ems="6"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp" >

            <Button
                android:id="@+id/psv_send_button"
                style="android:buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_default_small"
                android:gravity="center"
                android:text="@string/activity_page_send_set_up_value"
                android:textSize="45sp" />

            <Button
                android:id="@+id/psv_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_default_small"
                android:gravity="center"
                android:text="@string/activity_page_send_back"
                android:textSize="45sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>