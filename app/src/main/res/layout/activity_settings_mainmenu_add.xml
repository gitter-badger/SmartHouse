<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/header_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="fill_horizontal"
        android:text="@string/settings_mainmenu_add_prefs_header"
        android:textColor="#2a2a2a"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divider_1"
        android:layout_marginLeft="40dp"
        android:text="@string/settings_mainmenu_add_page_title"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_label"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/name_label"
        android:textSize="18sp" />

    <!-- -->
    
        <View
            android:id="@+id/divider_add_to_menu"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/name_value"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/add_to_menu_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_add_to_menu"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:text="@string/settings_mainmenu_add_move_to"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/add_to_menu_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_to_menu_label"
        android:layout_marginLeft="40dp" />
    
    <!--  -->

    <View
        android:id="@+id/divider_2"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/add_to_menu_spinner"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/divider_2"
        android:text="@string/settings_mainmenu_add_menu_item_type"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/type_label"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:checked="true"
            android:text="@string/settings_mainmenu_add_menu_item_submenu" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_mainmenu_add_menu_item_point" />
    </RadioGroup>

    <View
        android:id="@+id/divider_3"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/point_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_3"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:text="@string/settings_mainmenu_add_point_type"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/point_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/point_type_label"
        android:layout_marginLeft="40dp" />

        <View
        android:id="@+id/divider_35"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/point_type_spinner"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent" />
    
    <!-- Разделитель -->

    <TextView
        android:id="@+id/header_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divider_35"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:gravity="fill_horizontal"
        android:text="@string/settings_mainmenu_add_grid_image"
        android:textColor="#2a2a2a"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider_4"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_2"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/imagepick_layout_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_4"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal" >

        <Gallery
            android:id="@+id/point_image_gallery"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:background="@drawable/gallery_back"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:spacing="5dp" />

        <ImageView
            android:id="@+id/point_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gallery_image_back"
            android:padding="7dp"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagepick_layout_1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/global_accept"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/global_cancel"
            android:textSize="25sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider_5"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttons_layout_1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent" />

</RelativeLayout>
</ScrollView>